{
  "schemaVersion": 1,
  "id": "tooltipscroll",
  "version": "${version}",

  "name": "Tooltip Scroll",
  "description": "Allows the tooltip GUI to be moved with the scrollwheel or Page Up/Down keys.",
  "authors": [
    "Provismet"
  ],
  "contact": {
    "homepage": "https://www.curseforge.com/minecraft/mc-mods/tooltip-scroll-fabric",
    "sources": "https://github.com/Provismet/Tooltip-Scroll-Fabric",
    "issues": "https://github.com/Provismet/Tooltip-Scroll-Fabric/issues"
  },

  "license": "MIT",
  "icon": "assets/toolscroll/icon.png",

  "environment": "client",
  "entrypoints": {
    "client": [
      "com.provismet.tooltipscroll.TooltipScrollClient"
    ],
    "modmenu": [
      "com.provismet.tooltipscroll.config.TooltipScrollModMenu"
    ]
  },
  "mixins": [
    "toolscroll.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.14.6",
    "fabric": "*",
    "minecraft": "1.18.2",
    "java": ">=17"
  }
}
